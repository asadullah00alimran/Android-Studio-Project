<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_weight="6"
    android:background="#A6B7D7"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/display"
        android:layout_weight="2"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/btn_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#A6B7D7"
            android:onClick="method_7"
            android:text="7"
            android:textSize="30dp"

            />
        <Button
            android:id="@+id/btn_8"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="8"
            android:textSize="30dp"
            android:background="#A6B7D7"
            android:onClick="method_8"

            />
        <Button
            android:id="@+id/btn_9"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="9"
            android:textSize="30dp"
            android:background="#FFFFFF"
            android:onClick="method_9"

            />
        <Button
            android:id="@+id/btn_add"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="+"
            android:textSize="30dp"
            android:background="#FFFFFF"
            android:onClick="method_add"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_weight="1"
        >
        <Button
            android:id="@+id/btn_4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="4"
            android:textSize="30dp"
            android:background="#FFFFFF"
            android:onClick="method_4"

            />
        <Button
            android:id="@+id/btn_5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="5"
            android:textSize="30dp"
            android:background="#FFFFFF"
            android:onClick="method_5"

            />

        <Button
            android:id="@+id/btn_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#EA0808"
            android:onClick="method_6"
            android:text="6"

            android:textSize="30dp" />
        <Button
            android:id="@+id/btn_sub"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="-"
            android:textSize="30dp"
            android:background="#FFFFFF"
            android:onClick="method_sub"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_weight="1"
        >
        <Button
            android:id="@+id/btn_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="1"
            android:textSize="30dp"
            android:background="#FFFFFF"
            android:onClick="method_1"

            />
        <Button
            android:id="@+id/btn_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="2"
            android:textSize="30dp"
            android:background="#FFFFFF"
            android:onClick="method_2"

            />

        <Button
            android:id="@+id/btn_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:textSize="30dp"
            android:background="#FFFFFF"
            android:onClick="method_3"

            />

        <Button
            android:id="@+id/btn_mul"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="*"
            android:textSize="30dp"
            android:background="#FFFFFF"
            android:onClick="method_mul"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_weight="1"
        >
        <Button
            android:id="@+id/btn_zero"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="30dp"
            android:background="#FFFFFF"
            android:onClick="method_zero"

            />
        <Button
            android:id="@+id/btn_point"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="."
            android:textSize="30dp"
            android:background="#FFFFFF"
            android:onClick="method_point"

            />
        <Button
            android:id="@+id/btn_equal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="="
            android:textSize="30dp"
            android:background="#FFFFFF"
            android:onClick="method_equal"

            />
        <Button
            android:id="@+id/btn_div"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="/"
            android:textSize="30dp"
            android:background="#FFFFFF"
            android:onClick="method_div"

            />

    </LinearLayout>
</LinearLayout>